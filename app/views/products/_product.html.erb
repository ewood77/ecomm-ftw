<section>
  <h3><%= link_to product.name, product_path(product) %></h3>
  <p>
    <strong>Price:</strong> <%= number_to_currency product.price %>
  </p>
  <% if product.category %>
    <p>
      <strong>Category:</strong> <%=product.category.name %>
    </p>
  <% end %>
  <div><%= product.description %></div>
</section>